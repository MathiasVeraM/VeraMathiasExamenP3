<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VeraMathiasExamenP3.ViewModels"
             x:Class="VeraMathiasExamenP3.MainPage">

    <ContentPage.BindingContext>
        <local:MovieViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Buscar Película"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry Placeholder="Ingrese el título de la película"
               Text="{Binding SearchQuery}" />

        <Button Text="Buscar"
                Command="{Binding SearchCommand}" />

        <ListView ItemsSource="{Binding Movies}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold" />
                            <Label Text="{Binding Genre}" FontSize="16" />
                            <Label Text="{Binding Year}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
